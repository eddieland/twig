{
  "name": "twig-vscode",
  "displayName": "Twig Branch Tree",
  "description": "Displays the current Twig branch tree and selected branch in VS Code.",
  "version": "0.0.1",
  "publisher": "eddieland",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eddieland/twig.git",
    "directory": "twig-vscode"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:twigBranchTreeView",
    "onCommand:twig.refreshBranchTree"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "scm": [
        {
          "id": "twigBranchTreeView",
          "name": "Twig Branch Tree",
          "canSelectMany": false
        }
      ]
    },
    "commands": [
      {
        "command": "twig.refreshBranchTree",
        "title": "Refresh Twig Branch Tree",
        "icon": "$(refresh)"
      },
      {
        "command": "twig.switchBranch",
        "title": "Switch to this Twig branch",
        "icon": "$(git-branch)"
      },
      {
        "command": "twig.createBranchFromCurrent",
        "title": "Create new Twig branch from current",
        "icon": "$(add)"
      },
      {
        "command": "twig.createPullRequest",
        "title": "Create Pull Request",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "twig.reparentToRoot",
        "title": "Reparent to Root",
        "icon": "$(move)"
      },
      {
        "command": "twig.deleteBranch",
        "title": "Delete Branch",
        "icon": "$(trash)"
      },
      {
        "command": "twig.removeAsRoot",
        "title": "Remove as Root Branch",
        "icon": "$(remove)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "twig.switchBranch",
          "when": "view == twigBranchTreeView && (viewItem == branch || viewItem == rootBranch)",
          "group": "1_actions"
        },
        {
          "command": "twig.createPullRequest",
          "when": "view == twigBranchTreeView && (viewItem == branch || viewItem == rootBranch)",
          "group": "1_actions"
        },
        {
          "command": "twig.reparentToRoot",
          "when": "view == twigBranchTreeView && (viewItem == branch || viewItem == rootBranch)",
          "group": "2_manage"
        },
        {
          "command": "twig.deleteBranch",
          "when": "view == twigBranchTreeView && (viewItem == branch || viewItem == rootBranch)",
          "group": "3_danger"
        },
        {
          "command": "twig.removeAsRoot",
          "when": "view == twigBranchTreeView && viewItem == rootBranch",
          "group": "2_manage"
        }
      ],
      "view/title": [
        {
          "command": "twig.refreshBranchTree",
          "when": "view == twigBranchTreeView",
          "group": "navigation"
        },
        {
          "command": "twig.createBranchFromCurrent",
          "when": "view == twigBranchTreeView",
          "group": "navigation"
        },
        {
          "command": "twig.createPullRequest",
          "when": "view == twigBranchTreeView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {}
}